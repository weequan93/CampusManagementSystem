@{


    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

    string layout = "";
    if (controller == "Admin")
    {
        layout = "~/Views/Admin/Admin_Layout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout2.cshtml";
    }

    Layout = layout;
}
