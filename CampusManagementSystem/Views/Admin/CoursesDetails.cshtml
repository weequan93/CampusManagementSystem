@model IEnumerable<CampusManagementSystem.Models.Classe>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Course</h4>
        <hr />
        <p>
            @Html.ActionLink("Add Class", "ClassCreate")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Section)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "ClassEdit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "ClassDetails", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "ClassDelete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
    <p>
        
        @Html.ActionLink("Back to List", "Index") | 
        @Html.ActionLink("Add Class", "ClassCreate")
    </p>
</body>
</html>
